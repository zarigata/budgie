version: "1.0"
name: "test-app-2"

image:
  docker_image: "alpine:latest"
  command: ["/bin/sh", "-c", "while true; do sleep 1; done"]
  workdir: "/app"

ports:
  - container_port: 9090
    host_port: 9091
    protocol: tcp

volumes:
  - source: "./test-data"
    target: "/app/data"
    mode: rw

environment:
  - "TEST_ENV=2"
  - "APP_NAME=test-app-2"

resources:
  cpu_shares: 256
  memory_limit: 67108864  # 64MB
  pids_limit: 50

replicas:
  min: 1
  max: 2
